                                            <li><a href="#"><i class="fa fa-commenting-o"></i>@item.Title</a></li>
                                            <li><a href="#"><i class="fa fa-eye"></i> @item.ReadingCount</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-post-right">
                                    <a href="#" class="post-category lifestyle"><h3>@item.CategoryName</h3></a>
                                    <a href="#"><h4>We Enhance Our New Van</h4></a>
                               
                                    @item.Content
                                    <a href="#" class="post-top-btn m-0">Continue Read</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }






